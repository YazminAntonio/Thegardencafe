
<p>Prueba del menu</p>

{{#each items as |item|}}
<div class="card mb-3 mt-2" style="max-width: 1000px;">
	<div class="row g-0">
		<div class="col-md-4">
			<img src="{{item.photo}}" class="img-fluid rounded-start" />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">{{item.name}}</h5>
				<i class="fas fa-map-marker-alt"></i>
				<small>${{item.price}}</small>
				<p class="card-text mt-2">
					{{item.description}}
				</p>
				<form action="/houses/{{item._id}}/edit" method="get">
					<button class="btn btn-outline-secondary">
						Add
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
{{/each}}
