{{#each userHouses as |house|}}
<div class="card mb-3 mt-2" style="max-width: 1000px;">
	<div class="row g-0">
		<div class="col-md-4">
			<img src="{{house.photos.[0]}}" class="img-fluid rounded-start" />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">{{house.title}}</h5>
				<i class="fas fa-map-marker-alt"></i>
				<small>{{house.location}} ${{house.price}}</small>
				<p class="card-text mt-2">
					{{house.description}}
				</p>
				<form action="/houses/{{house._id}}/edit" method="get">
					<button class="btn btn-outline-secondary">
						Add
					</button>
				</form>
			</div>
		</div>
	</div>
</div>
{{/each}}
</div>
