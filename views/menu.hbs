
<h1 class="position-absolute top-0 start-50 translate-middle-x
">Menu</h1>

<div class="container">

{{#each items as |item|}}
<hr>
<div class="card mb-3 mt-2" style="max-width: 1000px;">
	<div class="row g-0">
		<div class="col-md-4">
			<img src="{{item.photo}}" class="img-fluid rounded-start" />
		</div>
		<div class="col-md-8">
			<div class="card-body">
				<h5 class="card-title">{{item.name}}</h5>
				<i class="fas fa-map-marker-alt"></i>
				<p class="card-text mt-2">
					{{item.description}}
				</p><small>${{item.price}}</small>
					<button name="add" onclick= "order('{{item._id}}')" class="btn btn-outline-secondary">
						Add
					</button>
			</div>
		</div>
	</div>
</div>
{{/each}}
</div>
